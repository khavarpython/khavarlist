@using Microsoft.AspNetCore.Identity
@using khavarlist.Areas.Identity.Data
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="dropdown">
        <a class="nav-link dropdown-toggle text-dark d-flex align-items-center gap-1 fw-bold"  href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            @UserManager.GetUserName(User)
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-square" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" />
            </svg>
        </a>
        <ul class="dropdown-menu dropdown-menu-sm-end bg-dark w-75" aria-labelledby="userDropdown">
            <li><a class="dropdown-item orange" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a></li>
            <li><a class="dropdown-item orange" asp-controller="Profile" asp-action="Index">My Lists</a></li>
            <li><hr class="dropdown-divider border-white"></li>
            <li>
                <form class="dropdown-item px-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn btn-link text-decoration-none w-100 text-start orange">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}