<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - khavarlist</title>
    <script type="importmap"></script>
    <script src="~/js/anime.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/khavarlist.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom border-black bg-orange" >
            <div class="container-fluid">

                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <h1 class="mb-0">Khavar List</h1>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Search" asp-action="AnimeSearch">Anime</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Search" asp-action="MangaSearch">Manga</a>
                        </li>
                    </ul>

                    <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center gap-4 mt-2 mt-sm-0">
                        <form class="d-flex" id="searchForm" asp-action="Search" asp-controller="Search" method="get">
                            <select class="form-select text-white list-dropdown border-0 rounded-0 rounded-start" style="width:6rem;background-color:#1F1F1F;" name="searchType" id="searchType">
                                <option value="anime" selected>Anime</option>
                                <option value="manga">Manga</option>
                            </select>
                            <input class="form-control rounded-0 border-0 text-white rounded-end" style="background-color: #1F1F1F;" value="@ViewBag.Query" name="query" type="search" placeholder="Search" aria-label="Search">
                        </form>
                        <partial name="_LoginPartial.cshtml" />
                    </div>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer position-absolute bottom-0 w-100 text-muted bg-orange">
        <div class="container-fluid py-3">
            <div class="row g-3 align-items-center">

                <div class="col-12 col-md-4 text-center text-md-start">
                    <div class="d-flex gap-3 align-items-center justify-content-center justify-content-md-start">
                        <span class="fw-semibold">Learn about me</span>
                        <div class="d-flex gap-2">
                            <a href="#" class="text-dark" aria-label="GitHub">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
                                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8" />
                                </svg>
                            </a>
                            <a href="#" class="text-dark" aria-label="LinkedIn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                                    <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-4 text-center">
                    <nav class="d-inline-block">
                        <ul class="list-inline mb-0 d-flex gap-3 justify-content-center">
                            <li class="list-inline-item pe-3 border-end border-dark border-2">
                                <a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="list-inline-item pe-3 border-end border-dark border-2">
                                <a class="text-dark text-decoration-none" asp-controller="Search" asp-action="AnimeSearch">Anime</a>
                            </li>
                            <li class="list-inline-item">
                                <a class="text-dark text-decoration-none" asp-controller="Search" asp-action="MangaSearch">Manga</a>
                            </li>
                        </ul>
                    </nav>
                </div>

                <div class="col-12 col-md-4 text-center text-md-end">
                    <p class="mb-1 lh-sm" style="font-size:0.85rem;">This is list website by Khavar Facey</p>
                    <p class="mb-0 lh-sm" style="font-size: 0.65rem;">Built using ASP.NET</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>